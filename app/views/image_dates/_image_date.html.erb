<% @comments.each do |comments| %>
    <form form accept-charset="UTF-8" class="form-inline" data-remote="true" id="comment_<%= comments.id %>" method="post"><div style="display:none"><input name="utf8" type="hidden" value="&#x2713;" /></div>
    <div class="panel-body">
      <ul class="list-group">
        <li class="list-group-item">
          <div class="row">
            <div class="col-xs-2 col-md-1">
              <% @user.each do |user| %>
                  <% if user.id.to_s == comments.user_id.to_s %>
                      <img src='<%= user.image%>' class="img-circle img-responsive" alt="" /></div>
                  <% end %>
              <% end %>
              <div class="col-xs-10 col-md-11">
                <div>
                  <h4><%=comments.comment%></h4>
                  <div class="mic-info">
                    Кем: <a href="<%=profile_path(comments.user_id) %>"><%=comments.user_name %></a><br>Добавленно:<%=comments.created_at %>
                  </div>
                </div>
                <div class="action">

                  <%= link_to 'Удалить комментарий ', [comments.image_date, comments],
                              method: :delete,remote: true,
                              data: { confirm: 'Вы уверены' } if current_user.id == comments.user_id %>
                </div>
                <% unless comments.user_id == current_user.id%>
                <a href="#comment" name="<%=comments.user_name %>">Ответить <%=comments.user_name %></a>
                   <% end %>
                    </div>
              <% @hash_tag.each do |tag| %>
                <% if tag.comment_id == comments.id %>
                  <%= tag.name %>
                <% end %>
            <% end %>
              <br>
              Рейтинг комментария( <%= comments.reputation_for(:comm_rep).to_i%> )

              <% if comments.user_id != current_user.id %>

                  <%=link_to "+",comment_vote_image_date_path(comments.id, type: "up"),method: :post %>
                  |  <%=link_to "-",comment_vote_image_date_path(comments.id, type: "down"),method: :post %>

              <% end %>
              </div>
        </li>
      </ul>
    </div>
    </form>
<% end %>
