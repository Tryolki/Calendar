<h1>Поиск пользователя</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Имя пользователя</th>
    <th>Email пользователя</th>
    <th>Ссылка на профиль</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><a href="<%=profile_path(user.id) %>">Просмотреть профиль пользователя</a></td>
      </tr>
  <% end %>
  </tbody>
</table>