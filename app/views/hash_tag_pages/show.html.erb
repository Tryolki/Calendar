<div class="container">
  <div class="row">
    <div class="panel panel-default widget">
      <div class="panel-heading">
        <h3 class="panel-title">
          Комметарии с тегом <%= @foundhash %> </h3>
      </div>
      <div id="comments">
        <% @comm.each do |comments| %>
            <form form accept-charset="UTF-8" class="form-inline" data-remote="true" id="comment_<%= comments.id %>" method="post"><div style="display:none"><input name="utf8" type="hidden" value="&#x2713;" /></div>
              <div class="panel-body">
                <ul class="list-group">
                  <li class="list-group-item">
                    <div class="row">
                      <div class="col-xs-2 col-md-1">
                        <% @user.each do |user| %>
                            <% if user.id.to_s == comments.user_id.to_s %>
                                <img src='<%= user.image%>' class="img-circle img-responsive" alt="" />
                                </div>
                            <% end %>
                        <% end %>
                        <div class="col-xs-10 col-md-11">
                          <div>
                            <h4><%=comments.comment%></h4>
                            <div class="mic-info">
                              Кем: <a href="<%=profile_path(comments.user_id) %>"><%=comments.user_name %></a><br>Добавленно:<%=comments.created_at %>
                            </div>
                          </div>
                        </div>
                        <%= comments.hsh%>
                        <br>
                        Рейтинг комментария( <%= comments.reputation_for(:comm_rep).to_i%> )
                        </div>
                  </li>
                </ul>
              </div>
            </form>
        <% end %>
      </div>
    </div>
  </div>

 </div>
</div>